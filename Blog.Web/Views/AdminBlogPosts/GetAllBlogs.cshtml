@model List<Blog.Web.Models.Domain.BlogPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Blogs</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Tags</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.Id</td>
                        <td>@blog.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach(var tag in blog.Tags)
                                {
                                    <span class="badge bg-secondary ms-1">@tag.DisplayName</span>
                                }
                            </div>
                        </td>
                        <td>
                           <a asp-area="" asp-controller="AdminBlogPosts" asp-action="EditBlog"
                           asp-route-id="@blog.Id">Edit</a>
                        </td>
                        @*<td>
                            <a asp-area="" asp-controller="AdminTags"
                       asp-action="EditTag" asp-route-id="@tag.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="AdminTags"
                       asp-action="DeleteTag" asp-route-id="@tag.Id">Delete</a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No blogs found!</p>
    }
</div>
