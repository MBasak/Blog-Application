@model List<Blog.Web.Models.Domain.TagItem>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tags</h1>

    </div>
</div>

<div class="container py-5">
    @if(Model != null && Model.Any()) 
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tag in Model) 
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminTags"
                            asp-action="EditTag" asp-route-id="@tag.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="AdminTags"
                            asp-action="DeleteTag" asp-route-id="@tag.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No tags found!</p>
    }
</div>


